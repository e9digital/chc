- @form_action = "/cgi-bin/post.php"
- @page_title  = "Ask Jessica for the Answer"
- @body_class  = "ask"

%h1= @page_title

%form{:action => @form_action, :method => 'POST', :id => 'user_input_form'}
  .field
    %label{:for => 'user_name', :class => 'req'} Name
    %input{:type => 'text', :id => 'user_name', :name => 'user_name', :class => 'required name'}

  .field
    %label{:for => 'user_email', :class => 'req'} Email
    %input{:type => 'text', :id => 'user_email', :name => 'user_email', :class => 'required email'}

  .field
    %label{:for => 'user_phone'} Phone
    %input{:type => 'text', :id => 'user_phone', :name => 'user_phone', :class => 'phone'}

  .field
    %label{:for => 'user_facebook'} Your Question?
    %textarea{:id => 'user_question', :name => 'user_question'}

  .actions
    %input{:type => 'image', :src => "/images/submit.png"}
